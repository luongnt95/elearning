<h2> Create an account </h2>

<form id='regForm' action='/users/signup' method='post' class="ui form">
  <div class="field">
      <label>Account Type</label>
      <select name="type" class="ui fluid dropdown">
        <option value="student">Student</option>
        <option value="instructor">Instructor</option>
      </select>
  </div>
  <div class="field">
    <label>First Name:</label>
    <input type="text" name="first_name" placeholder="First Name" value="{{first_name}}">
  </div>
  <div class="field">
    <label>Last Name:</label>
    <input type="text" name="last_name" placeholder="Last Name" value="{{last_name}}" >
  </div>
   <div class="field">
    <label>Email:</label>
    <input type="text" name="email" placeholder="Last Name" value="{{email}}" >
  </div>
  <div class="field">
    <label>UserName:</label>
    <input type="text" name="username" placeholder="User nam" value="{{username}}" >
  </div>
   <div class="field">
    <label>Password:</label>
    <input type="password" name="password" placeholder="Password">
  </div>
   <div class="field">
    <label>Password Confimation:</label>
    <input type="password" name="password2" placeholder="PasswordConfimation" >
  </div>

  <button class="ui primary button" type="submit">Submit</button>
</form>
