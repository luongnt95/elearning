<h2> Create an account </h2>

<form id='regForm' action='/users/signup' method='post'>    
    <div>
    	<label> Account Type </label>
    	<select name="type">
    		<option value="student"> Student </option>
    		<option value="instructor"> Instructor </option>
    	</select>
    </div>

	<label for='first_name' >First Name*: </label>
	<input type='text' name='first_name' maxlength="50" value="{{first_name}}" />

	<label for='last_name' >Last Name*: </label>
	<input type='text' name='last_name' maxlength="50" value="{{last_name}}" />

	<label for='email' >Email Address*:</label>
	<input type='text' name='email' id='email' maxlength="50" value="{{email}}" />
	 
	<label for='username' >UserName*:</label>
	<input type='text' name='username' id='username' maxlength="50" value="{{username}}" />
	 
	<label for='password' >Password*:</label>
	<input type='password' name='password' id='password' maxlength="50" />

	<label for='password2' >Password confirmation*:</label>
	<input type='password' name='password2' id='password2' maxlength="50" />

	<input type='submit' name='Submit' value='Submit' />
	 
</form>