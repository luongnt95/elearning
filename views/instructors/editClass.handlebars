<div class="ui segment">
<h2> EditClass </h2>

<form id="regForm" class="ui form" method = "post" action="/instructors/classes/{{class._id}}/update">
	<div class="field">
		<label> Class Title </label>
		<input type="text" name = "class_title" value="{{class.title}}">
	</div>
	<div class="field">
		<label> Class Description </label>
		<textarea id="tinytextarea" name="class_description"> {{class.description}} </textarea>
	</div>

	<div class="ui segment">
	<table cellspacing="0" cellpadding="0">
		<thread>
			<tr>
				<th> Lesson Number </th>
				<th> Lesson Title </th>
				<th> </th>
			</tr>
			<tbody>
				{{#each class.lessons}}
					<tr>
						<th> {{lesson_number}}</th>
						<th> {{{lesson_title}}} </th>
						<th> <a href="/classes/{{../class._id}}/lessons/{{lesson_number}}/edit"> Edit Lesson </a> </th>
					</tr>
				{{/each}}
			</tbody>
		</thread>
	</table>
	</div>

	<div>
		<input type="submit" class="ui blue button" value="Save changes" >
	</div>
</form>
</div>

