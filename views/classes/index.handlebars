<h3> Classes </h3>

<div class="ui row">
  {{#each classes}}
    <a class="ui fluid card" href="/classes/{{_id}}" style="margin-bottom: 1em;">
      <div class="content">
        <div class="header">{{title}}</div>
        <div class="meta">

        </div>
        <div class="description">
          <p>{{{description}}}</p>
        </div>
      </div>
      <div class="extra content">
        <div class="right floated author">
          <img class="ui avatar image" src="/images/avatar/small/matt.jpg"> {{instructor}}
        </div>
      </div>
    </a>
  {{/each}}
</div>
