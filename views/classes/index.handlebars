
<h3> Classes </h3>

<div class="ui row">
  <div class="ui divided segment items">
  {{#each classes}}
      <div class="item">
        <div class="image">
          <img src="{{image_url}}">
        </div>
        <div class="content">
          <a class="ui blue header" href="/classes/{{_id}}">{{title}}</a>
          <div class="description">
            <p>{{{description}}}</p>
          </div>
        <div class="extra">
          <div class="right floated author">
            <img class="ui avatar image" src="{{_instructor.avatar_url}}"> {{_instructor.name}}
          </div>
        </div>
      </div>
      </div>
  {{/each}}
  </div>
</div>

