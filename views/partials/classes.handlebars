
<div class="ui row">
  <div class="ui divided red segment items">
  <div class="ui header">Lastest Courses: </div>
  {{#each classes}}

      <input class="rating-value" type="hidden" value="{{ratingScore}}">
      <div class="item">
        <a href="/classes/{{_id}}" class="image">
          <img src="{{image_url}}">
        </a>
        <div class="content">
          <a class="ui blue header" href="/classes/{{_id}}">{{title}}</a>
          <span class="student-number"> ({{ students.length }} students) </span>

          <div class="description">
            <p>{{{description}}}</p>
          </div>
        <div class="extra">
          <div class="right floated author">
            <img class="ui avatar image" src="{{_instructor.avatar_url}}"> {{_instructor.name}}
          </div>
          <div>
          <span> Rating: </span>
          <span id="rating-{{@index}}">
            <span class="star">★</span>
            <span class="star">★</span>
            <span class="star">★</span>
            <span class="star">★</span>
            <span class="star">★</span>
          </span>
          </div>
        </div>
      </div>
      </div>
  {{/each}}
  </div>
</div>

<script src="/javascripts/getRating.js"></script>
